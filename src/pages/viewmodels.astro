---
// import { useEffect } from 'react';
import * as THREE from 'three';
import { GLTFLoader } from 'three/examples/jsm/loaders/GLTFLoader';
import PANOLENS from 'panolens';
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>3D Model Viewer</title>
  <style>
    body {
      margin: 0;
      overflow: hidden;
    }
    #panorama {
      width: 100vw;
      height: 100vh;
    }
  </style>
</head>
<body>
  <div id="panorama"></div>

  <script type="module">
    import * as THREE from '/node_modules/three/build/three.module.js';
    import { GLTFLoader } from '/node_modules/three/examples/jsm/loaders/GLTFLoader.js';
    import { PANOLENS } from '/node_modules/panolens/build/panolens.js';
  
    document.addEventListener('DOMContentLoaded', () => {
      const container = document.querySelector('#panorama');
      const viewer = new PANOLENS.Viewer({ container: container });
  
      const loader = new GLTFLoader();
      loader.load(
        '/models/birch_tree.gltf',
        (gltf) => {
          const model = gltf.scene;
          viewer.add(model);
        },
        undefined,
        (error) => {
          console.error('An error occurred loading the model:', error);
        }
      );
    });
  </script>
  



</body>
</html>
